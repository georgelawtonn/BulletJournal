<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="400.0" prefWidth="310.0">
        <children>
            <VBox layoutX="21.0" prefHeight="400.0" prefWidth="274.0" spacing="7.0">
                <children>
                    <HBox alignment="CENTER" prefHeight="54.0" prefWidth="311.0">
                        <children>
                            <Label text="Search task">
                                <font>
                                    <Font name="Courier New Bold" size="22.0"/>
                                </font>
                            </Label>
                        </children>
                    </HBox>
                    <HBox prefHeight="24.0" prefWidth="311.0">
                        <children>
                            <Label prefHeight="24.0" prefWidth="193.0" text="Enter: ">
                                <font>
                                    <Font name="Courier New" size="20.0"/>
                                </font>
                            </Label>
                            <TextField fx:id="input" prefHeight="25.0" prefWidth="114.0"/>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="62.0" prefWidth="274.0">
                        <children>
                            <Button fx:id="search" mnemonicParsing="false" text="Search"/>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="200.0" prefWidth="274.0">
                        <children>
                            <TextArea fx:id="result" text=""/>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="62.0" prefWidth="274.0">
                        <children>
                            <Button fx:id="exit" mnemonicParsing="false" text="Exit"/>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </children>
    </AnchorPane>
</Scene>
