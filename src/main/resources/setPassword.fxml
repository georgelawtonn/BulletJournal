<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="300.0" prefWidth="400.0">
        <children>
            <VBox prefHeight="300.0" prefWidth="400.0">
                <children>
                    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="112.0" prefWidth="400.0"
                           text="Set Paasword">
                        <font>
                            <Font name="BiauKai" size="20.0"/>
                        </font>
                    </Label>
                    <HBox alignment="CENTER" prefHeight="56.0" prefWidth="342.0">
                        <children>
                            <Label alignment="CENTER" prefHeight="19.0" prefWidth="181.0" text="Enter your pasword:">
                                <font>
                                    <Font name="BiauKai" size="17.0"/>
                                </font>
                            </Label>
                            <PasswordField fx:id="enter" prefHeight="26.0" prefWidth="143.0"/>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="71.0" prefWidth="250.0">
                        <children>
                            <Label alignment="CENTER" prefHeight="19.0" prefWidth="190.0"
                                   text="Re-enter your paasword:">
                                <font>
                                    <Font name="BiauKai" size="17.0"/>
                                </font>
                            </Label>
                            <PasswordField fx:id="re_enter" prefHeight="26.0" prefWidth="150.0"/>
                        </children>
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <VBox alignment="CENTER" prefHeight="78.0" prefWidth="202.0">
                                <children>
                                    <Button fx:id="exit" alignment="CENTER" contentDisplay="CENTER"
                                            mnemonicParsing="false" prefHeight="25.0" prefWidth="74.0" text="Exit">
                                        <font>
                                            <Font size="11.0"/>
                                        </font>
                                    </Button>
                                </children>
                            </VBox>
                            <VBox alignment="CENTER" prefHeight="78.0" prefWidth="198.0">
                                <children>
                                    <Button fx:id="confirm" alignment="CENTER" contentDisplay="CENTER"
                                            mnemonicParsing="false" prefHeight="25.0" prefWidth="74.0" text="Confirm">
                                        <font>
                                            <Font size="11.0"/>
                                        </font>
                                    </Button>
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </children>
    </AnchorPane>
</Scene>
