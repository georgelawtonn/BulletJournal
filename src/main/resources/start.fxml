<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="200" prefWidth="200">
        <children>
            <VBox prefHeight="200.0" prefWidth="100.0"/>
            <VBox fx:id="vbox" layoutX="4.0" prefHeight="622.0" prefWidth="800.0">
                <children>
                    <HBox alignment="BOTTOM_CENTER" prefHeight="205.0" prefWidth="850.0">
                        <children>
                            <Label text="Welcome to the Plants Bujo!">
                                <font>
                                    <Font name="Courier New Bold" size="25.0"/>
                                </font>
                            </Label>
                        </children>
                    </HBox>
                    <HBox alignment="BOTTOM_CENTER" prefHeight="76.0" prefWidth="850.0">
                        <children>
                            <Label text="Would you like to make a new Bujo Spread">
                                <font>
                                    <Font name="Courier New" size="17.0"/>
                                </font>
                            </Label>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="21.0" prefWidth="526.0">
                        <children>
                            <Label prefHeight="39.0" prefWidth="327.0" text="or load a preexisitng bujo file?">
                                <font>
                                    <Font name="Courier New" size="17.0"/>
                                </font>
                            </Label>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="123.0" prefWidth="850.0" spacing="150.0">
                        <children>
                            <Button fx:id="newBujo" mnemonicParsing="false" text="New "/>
                            <Button fx:id="loadBujo" mnemonicParsing="false" text="Load "/>
                        </children>
                    </HBox>
                    <HBox prefHeight="126.0" prefWidth="850.0"/>
                </children>
            </VBox>
        </children>
    </AnchorPane>
</Scene>